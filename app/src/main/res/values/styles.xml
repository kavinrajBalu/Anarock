<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Widget.MaterialComponents.Chip.Choice.style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/time_picker_chip_text_color</item>
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:textSize">@dimen/_12dp</item>
    </style>

    <style name="overlay_screen_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">529dp</item>
        <item name="android:layout_marginLeft">@dimen/_20dp</item>
        <item name="android:layout_marginRight">@dimen/_20dp</item>
        <item name="android:background">@drawable/rounder_edges</item>
        <item name="android:elevation">@dimen/_16dp</item>
    </style>

    <style name="title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_16dp</item>
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:gravity">clip_horizontal</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.withIcon">
        <item name="android:layout_width">318dp</item>
        <item name="android:layout_height">63dp</item>
        <item name="rippleColor">@color/light_grey</item>
        <item name="icon">@drawable/schedule_indicator</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:gravity">left|center</item>
        <item name="android:paddingLeft">@dimen/_20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dark_blue_back</item>
    </style>

    <style name="add_note_style">
        <item name="android:layout_width">314dp</item>
        <item name="android:layout_height">81dp</item>
        <item name="android:hint">Add note here..</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:background">@drawable/rounded_edit_text</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:gravity">start|top</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:padding">@dimen/_20dp</item>
        <item name="android:singleLine">false</item>
        <item name="android:textColor">@color/dark_blue_back</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="button_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/_13dp</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.addNewEvent">
        <item name="android:layout_width">341dp</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="rippleColor">@color/light_grey</item>
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:gravity">left|center</item>
        <item name="android:paddingLeft">@dimen/_20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dark_blue_back</item>
    </style>

    <style name="title_bold_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_blue_back</item>
        <item name="android:textSize">@dimen/_12dp</item>
    </style>

    <style name="sub_title_style" parent="title_bold_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_14dp</item>
    </style>

    <style name="DialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog" >
        <item name="colorAccent">@color/blue</item>
        <item name="colorPrimary">@color/blue</item>
    </style>

    <style name="project_switch_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:drawableLeft">@drawable/project_switch_check_item</item>
        <item name="android:drawableRight">@drawable/project_switch_check_ellipse</item>
        <item name="android:textColor">@color/project_switch_text_color</item>
        <item name="android:fontFamily">@font/muli_semibold</item>
        <item name="android:textSize">@dimen/_13dp</item>
    </style>

    <style name="events_bar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_14dp</item>
    </style>
    
    <style name="ToolBarTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:fontFamily">@font/muli_bold</item>
    </style>

</resources>
